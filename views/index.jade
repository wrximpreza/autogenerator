                                    label(for="format_320_480")
                                div.format_image.top
                                    img(src="/images/formats/banner_320_480.png")
                                div.format_name 320x480
                                div.description
                                    div Описание текста
                        div.col.s12.m6.l3
                            div.box
                                div.check
                                    input#format_400_300.filled-in(type="checkbox" name="format[]" value="400_300")
                                    label(for="format_400_300")
                                div.format_image.top
                                    img(src="/images/formats/banner_300_250.png")
                                div.format_name 400x300
                                div.description
                                    div Описание текста
                        div.col.s12.m6.l3
                            div.box
                                div.check
                                    input#format_400_300_2.filled-in(type="checkbox" name="format[]" value="400_300_2")
                                    label(for="format_400_300_2")
                                div.format_image.top
                                    img(src="/images/formats/banner_300_250_2.png")
                                div.format_name 400x300 V2
                                div.description
                                    div Описание текста
        div.foot_button
            div.container
                div.row
                    div.col.s12.m8.l8.offset-m2.offset-l2
                        div.result
                            div.col.s12.m4.l4.archive
                                input#download.filled-in(type="checkbox" name="download" value="1")
                                label(for="download") Скачать архив
                            div.col.s12.m4.l4.archive
                                input#send_mail.filled-in(type="checkbox" name="send_mail" value="1")
                                label(for="send_mail") Получить архив на почту
                            div.col.s12.m4.l4.email
                                input(type="email" placeholder="email@mail.com" name="email")
                        div.button
                            a.waves-effect.waves-light.btn(onclick="sendData()") Сгенерировать баннер


