extends ../layouts/layout_banner

block content
    div.block_728
        div.icon
            img(src=data.icon width="76" height="76")
        div.title
            span #{data.title}
            div.description.hyphenate #{data.description}
        div.buttons
            div.button
                div.os(id="install_#{data.lang}") #{translation.install}
                div.os_img
                    img(src='/images/#{data.os}_icon.png' width="33" height="33")
