extends layout

block content
    div.container
        div.row
            h1= title
                form.send_form_archive(action="/generate" method="post")
                    div.input-field.col.s12
                        img.responsive-img(src=data.icon width=150)
                    div.input-field.col.s12
                        input(type="text"  name="title" value=data.title)
                    div.input-field.col.s12
                        input(type="text"  name="reviews" value=data.reviews)
                    div.input-field.col.s12
                        input(type="text"  name="score" value=data.score)
                    div.input-field.col.s12
                        textarea.materialize-textarea(name="description") #{data.description}
                    input(type="hidden" name="os" value=data.os)
                    input(type="hidden" name="format" value=data.format)
                    input(type="hidden" name="app_id" value=data.app_id)
                    input(type="hidden" name="lang" value=data.lang)
                    input(type="hidden" name="country" value=data.country)
                    input(type="hidden" name="icon" value=data.icon)
                    div.col.s12.m12
                        input.waves-effect.waves-light.btn(type="submit" name="submit" )